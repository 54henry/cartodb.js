{
  "extends": "semistandard",
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true
  },
  "globals": {
    "google": true,
    "cartodb": true
  },
  "rules": {
    "new-cap": "off",
    "one-var": "off",
    "no-undef": "off",
    "camelcase": "off",
    "no-mixed-operators": "off",
    "no-useless-escape": "off",
    "no-unused-expressions": "off",
    "no-throw-literal": "off",
    "no-cond-assign": "off",
    "handle-callback-err": "off",
    "node/no-deprecated-api": "off",
    "standard/no-callback-literal": "off"
  }
}
